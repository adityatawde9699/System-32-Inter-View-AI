# =============================================================================
# InterView AI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# API Keys (Required)
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key-here

# -----------------------------------------------------------------------------
# Whisper STT Configuration
# -----------------------------------------------------------------------------
# Model size: tiny (fastest), base, small, medium, large (most accurate)
WHISPER_MODEL=tiny

# Device: cpu, cuda (GPU), or auto (detect)
WHISPER_DEVICE=cpu

# Compute type for quantization
WHISPER_COMPUTE_TYPE=int8

# -----------------------------------------------------------------------------
# Audio Coaching Thresholds
# -----------------------------------------------------------------------------
# RMS threshold for "speak up" alert (0.01-0.05 typical)
VOLUME_THRESHOLD=0.02

# Words per minute thresholds
WPM_FAST=160
WPM_SLOW=100

# -----------------------------------------------------------------------------
# Interview Settings
# -----------------------------------------------------------------------------
INTERVIEW_DURATION_MINUTES=15
MAX_QUESTIONS=10
QUESTION_TIMEOUT_SECONDS=120

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (more verbose output)
DEBUG_MODE=false

# -----------------------------------------------------------------------------
# Paths
# -----------------------------------------------------------------------------
RESUME_UPLOAD_DIR=data/resumes
SESSION_LOG_DIR=data/session_logs
